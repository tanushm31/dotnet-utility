            </button>
            
        </div>
        <div class="tw-w-full tw-px-2 tw-py-1 tw-bg-white tw-text-black">
                Some random paragraph
            </div>
        
    </div>
</div> 




<script>
    const modalOpenButton = document.getElementById("modal-open-button")
    const modalContainer = document.getElementById("modal-container")
    const modalCloseButton = document.getElementById("modal-close-button")
    modalOpenButton.addEventListener("click", () => {
        modalContainer.classList.remove("tw-hidden")
        modalContainer.classList.add("tw-flex")
    })


    modalCloseButton.addEventListener("click", () => {
        modalContainer.classList.add("tw-hidden")
        modalContainer.classList.remove("tw-flex")
    })
</script>

